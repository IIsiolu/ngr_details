<% include ../partials/head %>

<header>
    <% include ../partials/navbar %>
</header>

<main>
    <div class="container">
        <h1>State Information</h1>
        <form action="/store_state" method="POST">
            <div class="form-group">
              <label for="inputState">State</label>
              <input type="text" class="form-control" name="state" id="inputState" placeholder="Enter state">
            </div>

            <div class="form-group">
              <label for="inputCapital">Capital</label>
              <input type="text" class="form-control" name="capital" id="inputCapital" placeholder="Enter capital">
            </div>

            <div class="form-group">
                <label for="inputCurGov">Current Governor</label>
                <input type="text" class="form-control" name="governor" id="inputCurGov" placeholder="Enter current governor">
            </div>
            
            <div class="form-group">
                <label for="inputSlogan">Slogan</label>
                <input type="text" class="form-control" name="slogan" id="inputSlogan" placeholder="Enter slogan">
            </div>

            <div class="form-group">
                <label for="inputLandmass">Land Mass</label>
                <input type="text" class="form-control" name="landmass" id="inputLandmass" placeholder="Enter landmass">
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</main>


<% include ../partials/footer %>